<Window Left="1000" Top="50" MinWidth="500" TitleText="Player Stats" Padding="10" SizeToContent="Height">
    <Border BorderBrush="Black" BorderThickness="1">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="White * 0.08" Padding="5">
            <StackPanel Orientation="Vertical" Spacing="15">
                <Grid RowLengths="auto[100,]" ColumnLengths="160,0.7*[100,],*[100,160]" ColumnSpacing="20">

                    <!-- Character name+portrait -->
                    <HeaderedContentPresenter Row="0" Column="0" HeaderPosition="Top">
                        <HeaderedContentPresenter.Header>
                            <TextBlock Dock="Top" HorizontalAlignment="Center" Text="[b]Zidane[/b]" />
                        </HeaderedContentPresenter.Header>
                        <Border BorderBrush="Black" BorderThickness="4" Padding="8" Background="RoyalBlue * 0.4">
                            <TextBlock WrapText="True" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Placeholder for character portrait" TextAlignment="Center" />
                        </Border>
                    </HeaderedContentPresenter>

                    <!-- HP/MP/ST/XP -->
                    <StackPanel Row="0" Column="1" Orientation="Vertical" VerticalAlignment="Center">
                        <HeaderedContentPresenter HeaderPosition="Top" Spacing="0" Header="[b]HP[/b]">
                            <ProgressBar Size="22" BorderBrush="Black" BorderThickness="2" CompletedBrush="Crimson" Orientation="Horizontal" 
                                         ShowValue="True" Minimum="0" Maximum="255" Value="200" 
                                         ValueDisplayFormat="{}[b][shadow=Red 1 1]{{Value}} / {{Maximum}}[/b]" NumberFormat="0.#" />
                        </HeaderedContentPresenter>
                        <Spacer Height="8" />
                        <HeaderedContentPresenter HeaderPosition="Top" Spacing="0" Header="[b]MP[/b]">
                            <ProgressBar Size="22" BorderBrush="Black" BorderThickness="2" CompletedBrush="Blue" Orientation="Horizontal" 
                                         ShowValue="True" Minimum="0" Maximum="255" Value="220"
                                         ValueDisplayFormat="{}[b][shadow=blue 1 1]{{Value}} / {{Maximum}}[/b]" NumberFormat="0.#" />
                        </HeaderedContentPresenter>
                        <Spacer Height="8" />
                        <HeaderedContentPresenter HeaderPosition="Top" Spacing="0" Header="[b]ST[/b]">
                            <ProgressBar Size="22" BorderBrush="Black" BorderThickness="2" CompletedBrush="Green" Orientation="Horizontal" 
                                         ShowValue="True" Minimum="0" Maximum="255" Value="112" 
                                         ValueDisplayFormat="{}[b][shadow=green 1 1]{{Value}} / {{Maximum}}[/b]" NumberFormat="0.#" />
                        </HeaderedContentPresenter>
                        <Spacer Height="8" />
                        <HeaderedContentPresenter HeaderPosition="Top" Spacing="0" Header="[b]XP[/b]">
                            <ProgressBar Size="22" BorderBrush="Black" BorderThickness="2" CompletedBrush="Orange" Orientation="Horizontal" 
                                         ShowValue="False" Minimum="0" Maximum="255" Value="64" 
                                         ValueDisplayFormat="{}[b][shadow=Orange 1 1]{{Value}} / {{Maximum}}[/b]" NumberFormat="0.#" />
                        </HeaderedContentPresenter>
                    </StackPanel>

                    <!-- Attributes -->
                    <GroupBox Row="0" Column="2" IsExpandable="False" Padding="6">
                        <Grid RowLengths="auto,auto,auto,auto,8,auto,auto,auto,auto,auto" ColumnLengths="*,auto" RowSpacing="1" ColumnSpacing="5" VerticalAlignment="Center">
                            <TextBlock Row="0" Column="0" HorizontalAlignment="Left" Text="[b]Speed" />
                            <TextBlock Row="0" Column="1" HorizontalAlignment="Right" Text="[b]23" />

                            <TextBlock Row="1" Column="0" HorizontalAlignment="Left" Text="[b]Strength" />
                            <TextBlock Row="1" Column="1" HorizontalAlignment="Right" Text="[b]21" />

                            <TextBlock Row="2" Column="0" HorizontalAlignment="Left" Text="[b]Magic" />
                            <TextBlock Row="2" Column="1" HorizontalAlignment="Right" Text="[b]18" />

                            <TextBlock Row="3" Column="0" HorizontalAlignment="Left" Text="[b]Sprit" />
                            <TextBlock Row="3" Column="1" HorizontalAlignment="Right" Text="[b]23" />

                            <TextBlock Row="5" Column="0" HorizontalAlignment="Left" Text="[b]Attack" />
                            <TextBlock Row="5" Column="1" HorizontalAlignment="Right" Text="[b]12" />

                            <TextBlock Row="6" Column="0" HorizontalAlignment="Left" Text="[b]Defence" />
                            <TextBlock Row="6" Column="1" HorizontalAlignment="Right" Text="[b]6" />

                            <TextBlock Row="7" Column="0" HorizontalAlignment="Left" Text="[b]Evade" />
                            <TextBlock Row="7" Column="1" HorizontalAlignment="Right" Text="[b]5" />

                            <TextBlock Row="8" Column="0" HorizontalAlignment="Left" Text="[b]Magic Def" />
                            <TextBlock Row="8" Column="1" HorizontalAlignment="Right" Text="[b]6" />

                            <TextBlock Row="9" Column="0" HorizontalAlignment="Left" Text="[b]Magic Eva" />
                            <TextBlock Row="9" Column="1" HorizontalAlignment="Right" Text="[b]3" />
                        </Grid>
                    </GroupBox>
                </Grid>

                <Grid RowLengths="auto[100,]" ColumnLengths="160,0.7*[100,],*[100,160]" ColumnSpacing="20">

                    <!-- Character name+portrait -->
                    <HeaderedContentPresenter Row="0" Column="0" HeaderPosition="Top">
                        <HeaderedContentPresenter.Header>
                            <TextBlock Dock="Top" HorizontalAlignment="Center" Text="[b]Garnet[/b]" />
                        </HeaderedContentPresenter.Header>
                        <Border BorderBrush="Black" BorderThickness="4" Padding="8" Background="RoyalBlue * 0.4">
                            <TextBlock WrapText="True" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Placeholder for character portrait" TextAlignment="Center" />
                        </Border>
                    </HeaderedContentPresenter>

                    <!-- HP/MP/ST/XP -->
                    <StackPanel Row="0" Column="1" Orientation="Vertical" VerticalAlignment="Center">
                        <HeaderedContentPresenter HeaderPosition="Top" Spacing="0" Header="[b]HP[/b]">
                            <ProgressBar Size="22" BorderBrush="Black" BorderThickness="2" CompletedBrush="Crimson" Orientation="Horizontal"
                                         ShowValue="True" Minimum="0" Maximum="255" Value="100" 
                                         ValueDisplayFormat="{}[b][shadow=Red 1 1]{{Value}} / {{Maximum}}[/b]" NumberFormat="0.#" />
                        </HeaderedContentPresenter>
                        <Spacer Height="8" />
                        <HeaderedContentPresenter HeaderPosition="Top" Spacing="0" Header="[b]MP[/b]">
                            <ProgressBar Size="22" BorderBrush="Black" BorderThickness="2" CompletedBrush="Blue" Orientation="Horizontal" 
                                         ShowValue="True" Minimum="0" Maximum="255" Value="240"
                                         ValueDisplayFormat="{}[b][shadow=blue 1 1]{{Value}} / {{Maximum}}[/b]" NumberFormat="0.#" />
                        </HeaderedContentPresenter>
                        <Spacer Height="8" />
                        <HeaderedContentPresenter HeaderPosition="Top" Spacing="0" Header="[b]ST[/b]">
                            <ProgressBar Size="22" BorderBrush="Black" BorderThickness="2" CompletedBrush="Green" Orientation="Horizontal" 
                                         ShowValue="True" Minimum="0" Maximum="255" Value="150" 
                                         ValueDisplayFormat="{}[b][shadow=green 1 1]{{Value}} / {{Maximum}}[/b]" NumberFormat="0.#" />
                        </HeaderedContentPresenter>
                        <Spacer Height="8" />
                        <HeaderedContentPresenter HeaderPosition="Top" Spacing="0" Header="[b]XP[/b]">
                            <ProgressBar Size="22" BorderBrush="Black" BorderThickness="2" CompletedBrush="Orange" Orientation="Horizontal" 
                                         ShowValue="False" Minimum="0" Maximum="255" Value="20" 
                                         ValueDisplayFormat="{}[b][shadow=Orange 1 1]{{Value}} / {{Maximum}}[/b]" NumberFormat="0.#" />
                        </HeaderedContentPresenter>
                    </StackPanel>

                    <!-- Attributes -->
                    <GroupBox Row="0" Column="2" IsExpandable="False" Padding="6">
                        <Grid RowLengths="auto,auto,auto,auto,8,auto,auto,auto,auto,auto" ColumnLengths="*,auto" RowSpacing="1" ColumnSpacing="5" VerticalAlignment="Center">
                            <TextBlock Row="0" Column="0" HorizontalAlignment="Left" Text="[b]Speed" />
                            <TextBlock Row="0" Column="1" HorizontalAlignment="Right" Text="[b]18" />

                            <TextBlock Row="1" Column="0" HorizontalAlignment="Left" Text="[b]Strength" />
                            <TextBlock Row="1" Column="1" HorizontalAlignment="Right" Text="[b]11" />

                            <TextBlock Row="2" Column="0" HorizontalAlignment="Left" Text="[b]Magic" />
                            <TextBlock Row="2" Column="1" HorizontalAlignment="Right" Text="[b]29" />

                            <TextBlock Row="3" Column="0" HorizontalAlignment="Left" Text="[b]Sprit" />
                            <TextBlock Row="3" Column="1" HorizontalAlignment="Right" Text="[b]20" />

                            <TextBlock Row="5" Column="0" HorizontalAlignment="Left" Text="[b]Attack" />
                            <TextBlock Row="5" Column="1" HorizontalAlignment="Right" Text="[b]8" />

                            <TextBlock Row="6" Column="0" HorizontalAlignment="Left" Text="[b]Defence" />
                            <TextBlock Row="6" Column="1" HorizontalAlignment="Right" Text="[b]5" />

                            <TextBlock Row="7" Column="0" HorizontalAlignment="Left" Text="[b]Evade" />
                            <TextBlock Row="7" Column="1" HorizontalAlignment="Right" Text="[b]2" />

                            <TextBlock Row="8" Column="0" HorizontalAlignment="Left" Text="[b]Magic Def" />
                            <TextBlock Row="8" Column="1" HorizontalAlignment="Right" Text="[b]10" />

                            <TextBlock Row="9" Column="0" HorizontalAlignment="Left" Text="[b]Magic Eva" />
                            <TextBlock Row="9" Column="1" HorizontalAlignment="Right" Text="[b]8" />
                        </Grid>
                    </GroupBox>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
